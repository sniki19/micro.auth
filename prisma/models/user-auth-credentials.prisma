model UserAuthCredentials {
  // id String @id @default(uuid()) @db.Uuid

  userId String  @unique @default(uuid()) @map("user_id") @db.Uuid
  email  String? @unique @db.VarChar(255)
  phone  String? @unique @db.VarChar(16)

  password   String  @map("password_hash") @db.VarChar(1024)
  isActive   Boolean @default(false) @map("is_active")
  isVerified Boolean @default(false) @map("is_verified")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userAuthAttempt      UserAuthAttempt[]
  userSession          UserSession[]
  passwordResetToken   PasswordResetToken[]
  refreshToken         RefreshToken[]
  userSecuritySettings UserSecuritySettings?

  @@index([email, phone], name: "credentials_email_phone_idx")
  @@map("user_auth_credentials")
}
