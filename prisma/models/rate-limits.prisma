model RateLimit {
  id String @id @default(uuid()) @db.Uuid

  serviceName          String @map("service_name") @db.VarChar(256)
  maxAttempts          Int    @map("max_attempts")
  windowsSizeSeconds   Int    @map("windows_size_seconds")
  blockDurationSeconds Int    @map("block_duration_seconds")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  userAuthAttempt UserAuthAttempt[]

  @@index([serviceName], name: "rate_limits_service_name_idx")
  @@map("rate_limits")
}
