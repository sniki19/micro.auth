model UserSecuritySettings {
  userId String @id @unique @map("user_id") @db.Uuid

  isActive   Boolean @default(false) @map("is_active")
  isVerified Boolean @default(false) @map("is_verified")

  accountBlocked      Boolean   @default(false) @map("account_blocked")
  blockedUntil        DateTime? @map("blocked_until")
  blockReason         String?   @map("block_reason")
  failedLoginAttempts Int       @default(0) @map("failed_login_attempts")

  sessionTimeout     Int?             @map("session_timeout")
  loginNotifications Boolean          @default(false) @map("login_notifications")
  twoFactorEnabled   Boolean          @default(false) @map("two_factor_enabled")
  twoFactorMethod    TwoFactorMethod? @map("two_factor_method")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user UserAuthCredentials @relation(fields: [userId], references: [userId], map: "user_security_settings_auth_credentials_fkey")

  @@map("user_security_settings")
}

enum TwoFactorMethod {
  SMS
  TOTP
  EMAIL

  @@map("two_factor_method_enum")
}
